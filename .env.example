# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/fraud-detection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Message Queue Configuration
MESSAGE_QUEUE_URL=amqp://localhost

# Elasticsearch Configuration
ELASTIC_URL=http://localhost:9200

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Fraud Detection Thresholds
MAX_TRANSACTION_AMOUNT=1000000
MAX_DAILY_TRANSACTIONS=20
MAX_VELOCITY_PER_MINUTE=5
NIGHT_TIME_START=23
NIGHT_TIME_END=5
FRAUD_THRESHOLD=0.7
RISK_THRESHOLD=0.5

# Rate Limiting Configuration
FRAUD_DETECTION_RATE_WINDOW=60000
FRAUD_DETECTION_RATE_MAX=100
MODEL_TRAINING_RATE_WINDOW=900000
MODEL_TRAINING_RATE_MAX=10

# Feature Flags
ENABLE_ML_MODEL=true
ENABLE_GEOLOCATION=true
ENABLE_DEVICE_TRACKING=true
ENABLE_REAL_TIME_NOTIFICATIONS=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Nigeria-specific Configuration
DEFAULT_CURRENCY=NGN
DEFAULT_TIMEZONE=Africa/Lagos
SUPPORTED_BANK_CODES=044,058,011,214,221,232,076

# ML Model Configuration
MODEL_UPDATE_FREQUENCY=3600
MIN_TRAINING_SAMPLES=100
MODEL_RETRAIN_THRESHOLD=0.05

# BVN API Configuration (replace with your provider's details)
BVN_API_URL=https://api.your-bvn-provider.com
BVN_API_KEY=your-api-key
